<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
	    <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <div class="index_row clearfix">
      <h2 class="task_name">
        <%= link_to task.name, task %>
      </h2>
      <p class="task_sub_name">
        <%= task.status %>
      </p>
    </div>
    <% end %>
    <div class="links">
      <%= link_to "New Task", new_task_path %>
    </div>
  </tbody>
</table>

